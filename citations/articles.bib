@article{rayyan-685794409,
  title={The relationships between character strengths and subjective wellbeing: Evidence from greece under lockdown during covid-19 pandemic},
  year={2021},
  journal={International Journal of Environmental Research and Public Health},
  volume={18},
  number={20},
  author={Vasileiou, D. and Moraitou, D. and Papaliagkas, V. and Pezirkianidis, C. and Stalikas, A. and Papantoniou, G. and Sofologi, M.},
